<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="Autowiring.Address" name="address1">
        <property name="street" value="Bakers Street"/>
        <property name="city" value="London"/>
    </bean>
    <bean class="Autowiring.Address" name="address">
        <property name="street" value="Fish Markeet"/>
        <property name="city" value="Naudero"/>
    </bean>

<!--    Auto Wiring byName-->

<!--    <bean class="Autowiring.Employee" name="employee" autowire="byName"></bean>-->

    <!--    Auto wiring byType-->

<!--    <bean class="Autowiring.Employee" name="employee" autowire="byType"></bean>-->



    <!--    Auto wiring by constructor-->

    <bean class="Autowiring.Employee" name="employee" autowire="constructor"></bean>

</beans>