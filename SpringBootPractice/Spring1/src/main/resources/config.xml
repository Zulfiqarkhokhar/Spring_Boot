<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--     first been value as tag/element-->
    <bean class="com.example.Spring1.Student" name="student1">
        <property name="id">
            <value>123</value>
        </property>
        <property name="name">
            <value>Zulfiqar</value>
        </property>
        <property name="address">
            <value>Bakers street London</value>
        </property>
    </bean>

<!--    second Bean value as attribute-->

    <bean class="com.example.Spring1.Student" name="student2">
        <property name="id" value="124" />
        <property name="name" value="Yasir" />
        <property name="address" value="New Dehli" />

    </bean>

<!--    third Bean P schema -->

    <bean class="com.example.Spring1.Student" name="student3" p:id="125" p:name="Ameer" p:address="Kolkata India">

    </bean>

</beans>